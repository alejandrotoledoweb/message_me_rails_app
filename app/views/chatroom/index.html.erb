<section class="bg-neutral-50 px-6 py-10 text-center text-neutral-800 dark:bg-neutral-700 dark:text-neutral-200 flex flex-col items-center ">
  <h1 class="mb-6 text-5xl font-bold">Coffee chat time</h1>
  <h3 class="mb-8 text-3xl font-bold">Welcome to chatRoom</h3>
</section>

<section class="grid grid-cols-6 gap-4 py-4 px-4">
  <div class="col-span-4 border border-gary-300 pl-2">
    <div class="h-40">
      <%= render template: 'messages/index' %>
    </div>
    <div class="grid grid-cols-8 gap-4">
      <input type="text" class="bg-gray-100 text-slate-500 border border-slate-400 h-10 col-span-6" placeholder="Enter a new message...">
      <button class="w-20 bg-orange-600 border border-x-40 h-10 col-span-2">Send</button>
    </div>
    <div class="mt-6">extra content, input section</div>
  </div>
  <div class="col-span-2 border border-gary-300 pl-2">user section</div>
</section>
